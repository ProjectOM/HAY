<div class="tabContent" id="manage_authorization">
    <h1 style="margin-bottom: 0;">{{ 'manage_authorization'|trans }}</h1>
    <div class="criteria" style="display: flex; padding: 0px; height: 40px;">
        {% for category in categories %}
            <a href="#" onclick="openSubTab('subTab{{ category|capitalize }}')"><span>{{ category|capitalize }}</span></a>
        {% endfor %}
    </div>
    {{ form_start(manage_authorizations, {"attr": {"style": "grid-column: 1/3;"}}) }}
    {% for category in categories %}
        <div class="subTabContent" id="subTab{{ category|capitalize }}">
            <h1>{{ category|capitalize }}</h1>
            <div style="display: grid; grid-template-columns: 2fr 1fr 4fr;">
                {% for key in keys if key|split(":")[0] == category %}
                    <div style="text-align: center;padding: 25px 0px;border-bottom: 1px solid var(--bg-dark);">{{ key|replace({':': ' <i class="icofont-arrow-right"></i> '})|raw }}</div>
                    <div style="text-align: center;padding: 25px 0px;border-bottom: 1px solid var(--bg-dark);">{{ form_widget(manage_authorizations[key]) }}</div>
                    <div style="padding: 25px 0px;border-bottom: 1px solid var(--bg-dark);">{{ key|trans|replace({'\n': '<br />'})|raw }}</div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
    {{ form_widget(manage_authorizations.submit, {'attr': {'class': 'submit'}}) }}
    {{ form_end(manage_authorizations) }}
</div>
