{% set i = 0 %}
{% for post in postList %}
{# Affichage des textes #}
{# Text display #}
<div class="text">
    {# Informations sur l'exp√©diteur #}
    {# Sender informations #}
    <div class="infHAY c{{ post[0].color }}">
        <table style="border: 0px;">

            <tr>
                <td style="padding-right: 15px;"><a href="{{ url('user_show', {'id': post.id}) }}"><img src="/ressources/icone.png" width="40px" height="40px" alt="{{ 'usr_img'|trans }}" /></a></td>
                <td style="border-left: 1px solid {{ post[0].color != 'FFF' ? 'white' : 'black' }}; padding-left: 15px; font-family: sans-serif; color: {{ post[0].color != 'FFF' ? 'white' : 'black' }};">
                    <a href="{{ url('user_show', {'id': post.id}) }}">
                        {{ post.first_name }} {{ post.last_name }} {% if post.username %}{{ 'alias'|trans }} {{ post.username }} {% endif %}{{ 'has_write'|trans }}
                    </a>
                </td>
                <span style="float: right; padding: 5px; cursor: default;">
                    {% if post.id == app.user.id %}
                        <a class="icofont icofont-ui-delete" style="margin-right: 5px; text-decoration: none; color: {{ post[0].color != 'FFF' ? 'white' : 'black' }};" href="{{ url('post_delete', {'id': post[0].id}) }}"></a>
                        <a class="icofont icofont-pencil-alt-2" style="margin-right: 5px; text-decoration: none; color: {{ post[0].color != 'FFF' ? 'white' : 'black' }};" href="{{ url('post_edit', {'id': post[0].id}) }}"></a>
                    {% endif %}
                    <i class="icofont icofont-navigation-menu"></i>
                </span>
            </tr>
        </table>
    </div>
    {########################################}
    <div class="content c{{ post[0].color }} ff{{ post[0].font }} fs{{ post[0].size }}" style="border-color: {{ post[0].color != 'FFF' ? 'white' : 'black' }};">
        {{ post[0].content|escape|replace({'&lt;br /&gt;': '<br />'})|raw }}
    </div>
    {{ render(url('comment', {'id': post[0].id, '_color': post[0].color})) }}
{% if commentList[i] is not empty %}
{% for comment in commentList[i] %}
    <div class="com">
        <table style="border: 0px; border-bottom: 1px solid grey; width: 550; margin-bottom: 5px;">
            <tr>
                <td style="padding-right: 15px;"><a href="{{ url('user_show', {'id': comment.id}) }}"><img src="/ressources/icone.png" width="40px" height="40px" alt="{{ 'usr_img'|trans }}" /></a></td>
                <td style="border-left: 1px solid grey; padding-left: 15px; width: 85%; color: grey;"><a href="{{ url('user_show', {'id': comment.id}) }}">
                    {{ comment.first_name }} {{ comment.last_name }}
                    {% if comment.username %}{{ 'alias'|trans }} {{ comment.username }} {% endif %}
                    {{ 'has_comment'|trans }}
                </a></td>
                <td style="width: 15%; cursor: default">
                    {% if comment.id == app.user.id %}
                        <a class="icofont icofont-ui-delete" style="margin-right: 5px; text-decoration: none; color: grey;" href="{{ url('comment_delete', {'id': comment[0].id}) }}"></a>
                        <a class="icofont icofont-pencil-alt-2" style="margin-right: 5px; text-decoration: none; color: grey;" href="{{ url('comment_edit', {'id': comment[0].id}) }}"></a>
                    {% endif %}
                    <i class="icofont icofont-navigation-menu" style="color: grey;"></i>
                </td>
            </tr>
        </table>
        {{ comment[0].comment|escape|replace({'&lt;br /&gt;': '<br />'})|raw }}
    </div>
{% endfor %}
{% endif %}
    <div class="end"></div>
</div>
{% set i = i + 1 %}
{% endfor %}
