{% extends 'base.html.twig' %}

{% block title %}{{ 'new_laws'|trans }}{% endblock %}

{% block body %}
{{ include("menu.html.twig") }}

<div style="display: grid; grid-template-columns: auto auto; border-bottom: 5px solid var(--hay-color); color: white; font-family: sans-serif; font-size: 30px; cursor: pointer;">
    <span style="text-align: center;" onclick="openTab('write');">{{ 'write'|trans }}</span>
    <span style="text-align: center;" onclick="openTab('preview'); renderingMarkdown();">{{ 'preview'|trans }}</span>
</div>

{{ form_start(laws, {'attr': {"class": "tabContent", "id": "write", "style": "width: 80%; margin: auto; display: grid; grid-template-columns: auto;"}}) }}
{{ form_widget(laws.title, {'attr': {"class": "login loginLarge", "placeholder": "Title"}}) }}
{{ form_widget(laws.content, {'attr': {"style": "resize: none; background-color: var(--gray-dark); border: 1px solid var(--gray-color); color: white; width: 100%; height: 500px;"}}) }}
{{ form_widget(laws.submit, {'attr': {"class": "submit"}}) }}
{{ form_end(laws) }}

<div class="markdown tabContent" id="preview" style="margin: auto;">
</div>
{% endblock %}
